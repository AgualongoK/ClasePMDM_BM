<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".SecondActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce nombre"
        android:id="@+id/edit_nombre"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/name"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce apellido"
        android:id="@+id/edit_apellido"
        android:drawableLeft="@drawable/surname"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce telefono"
        android:id="@+id/edit_telefono"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10dp"
        android:inputType="number"
        android:layout_marginBottom="10dp" />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/check_experiencia"
        android:text="Experiencia"
        android:layout_marginBottom="10dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pasar datos"
        android:id="@+id/boton_pasar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/imagen_experiencia" />
</LinearLayout>